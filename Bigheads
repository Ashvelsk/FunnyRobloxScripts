for _,v in game:GetService("Players"):GetPlayers() do
	v.CharacterAdded:Connect(function(char)
		print(char)
		Instance.new("Highlight").Parent = char
		char.Head.Size = Vector3.new(_G.HeadSize,_G.HeadSize,_G.HeadSize)
		char.Head.Transparency = 0.5
		char.Head.BrickColor = BrickColor.new("Red")
		char.Head.Material = "Neon"
		char.Head.CanCollide = false
		char.Head.Massless = true
	end)
end



game:GetService("Players").PlayerAdded:Connect(function(pla)
	pla.CharacterAdded:Connect(function(char)
		print(char)
		Instance.new("Highlight").Parent = char
		char.Head.Size = Vector3.new(_G.HeadSize,_G.HeadSize,_G.HeadSize)
		char.Head.Transparency = 0.5
		char.Head.BrickColor = BrickColor.new("Red")
		char.Head.Material = "Neon"
		char.Head.CanCollide = false
		char.Head.Massless = true
	end)
end)
